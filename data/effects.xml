<?xml version="1.0" encoding="utf-8"?>
<effects>
  <!-- for depth -->
  <vertex_desc name="depth_vertex_desc">
    <desc semantic="position" semindex="0" slot="0" data_type="vector4" />
  </vertex_desc>
  
  <effect name="depth_effect" effect_name="DepthEffect" 
          vertex_desc=":depth_vertex_desc">
    <shader stage="vertex" entry="vsmain" path="//base/hlsl/depth.hlsl.vs" />
    <shader stage="pixel" entry="psmain" path="//base/hlsl/depth.hlsl.ps" />
  </effect>

  <effect name="color_depth_effect" effect_name="DepthEffect" 
          vertex_desc=":depth_vertex_desc">
    <shader stage="vertex" entry="vsmain" path="//base/hlsl/depth.hlsl.vs" />
    <shader stage="pixel" entry="psmain" path="//base/hlsl/color_depth.hlsl.ps" />
  </effect>

  <!-- for shadow depth -->
  <vertex_desc name="shadow_depth_vertex_desc">
    <desc semantic="position" semindex="0" slot="0" data_type="vector4" />
    <desc semantic="normal" semindex="0" slot="0" data_type="vector4" />
  </vertex_desc>
  <effect name="shadow_depth_effect" effect_name="ShadowDepthEffect" 
          vertex_desc=":shadow_depth_vertex_desc">
    <shader stage="vertex" entry="vsmain" path="//base/hlsl/shadow_depth.hlsl.vs" />
    <shader stage="pixel" entry="psmain" path="//base/hlsl/shadow_depth.hlsl.ps" />
  </effect>

  <vertex_desc name="tex_vertex_desc">
    <desc semantic="position" semindex="0" slot="0" data_type="vector4" />
    <desc semantic="normal" semindex="0" slot="0" data_type="vector4" />
    <desc semantic="texcoord" semindex="0" slot="0" data_type="vector2" />
  </vertex_desc>

  <vertex_desc name="mslot_tex_vertex_desc">
    <desc semantic="position" semindex="0" slot="0" data_type="vector4" />
    <desc semantic="normal" semindex="0" slot="0" data_type="vector4" />
    <desc semantic="texcoord" semindex="0" slot="1" data_type="vector2" />
  </vertex_desc>

  <effect name="tex_effect" effect_name="TexturedEffect" 
          vertex_desc=":tex_vertex_desc">
    <shader stage="vertex" entry="vsmain" path="//base/hlsl/tex.hlsl.vs" />
    <shader stage="pixel" entry="psmain" path="//base/hlsl/tex.hlsl.ps" />
  </effect>

  <effect name="shadowmap" effect_name="ShadowMapEffect"
	  vertex_desc=":tex_vertex_desc">
    <shader stage="vertex" entry="vsmain" path="//base/hlsl/shadowmap.hlsl.vs" />
    <shader stage="pixel" entry="psmain" path="//base/hlsl/shadowmap.hlsl.ps" />
  </effect>
</effects>
